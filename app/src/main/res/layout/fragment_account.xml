<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navegacion.Account">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageBanner"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bannerprueba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewprofile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="130dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/userprueba"
            app:layout_constraintEnd_toEndOf="@+id/imageBanner"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/imageBanner"
            app:layout_constraintTop_toTopOf="@+id/imageBanner" />

        <TextView
            android:id="@+id/nombredecuenta"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="NOMBRE COMPLETO"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewprofile" />


        <Button
            android:id="@+id/closesesionbutton"
            style="@style/BottonStyle2"
            android:layout_width="209dp"
            android:layout_height="56dp"

            android:layout_marginTop="16dp"
            android:text="CERRAR SESION"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombredecuenta" />

        <ScrollView
            android:layout_width="409dp"
            android:layout_height="166dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closesesionbutton"
            app:layout_constraintVertical_bias="0.107">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button4"
                    style="@style/ButtonCanva"
                    android:layout_width="263dp"
                    android:layout_height="70dp"

                    android:layout_marginTop="20dp"

                    android:text="MI CANVA"
                    android:textSize="30dp"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/baseline_school_24"
                    app:iconPadding="0dp"
                    app:iconSize="40dp" />

                <Button
                    android:id="@+id/button5"
                    style="@style/ButtonCalendar"
                    android:layout_width="345dp"
                    android:layout_height="70dp"

                    android:layout_marginTop="20dp"
                    android:text="MI CALENDARIO"
                    android:textSize="30dp"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/baseline_calendar_month_24"
                    app:iconPadding="0dp"
                    app:iconSize="40dp"

                    />

                <Button
                    android:id="@+id/button6"
                    style="@style/ButtonEmail"
                    android:layout_width="280dp"
                    android:layout_height="70dp"

                    android:layout_marginTop="20dp"

                    android:text="MI CORREO"
                    android:textSize="30dp"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/baseline_email_24"
                    app:iconPadding="0dp"
                    app:iconSize="40dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>