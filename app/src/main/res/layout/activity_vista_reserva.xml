<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reserva.VistaReserva"


    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@color/colorwidghetclaro"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="0dp"
            android:radius="10dp">

            <ImageView
                android:id="@+id/aula_image"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/imagen_reserva"></ImageView>

            <TextView
                android:id="@+id/aula_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="CIT 510"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/aula_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Edificio CIT. Piso 5. Aula 510"
                android:textSize="10sp"></TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <WebView
        android:id="@+id/aula_web"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

    </WebView>

    <Button
        android:id="@+id/aula_boton_reservar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorwidghet"
        android:text="RESERVAR"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aula_web" />


</androidx.constraintlayout.widget.ConstraintLayout>