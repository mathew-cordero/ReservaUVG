<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewguardada"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    style="@style/CardViewStyle"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        style="@style/RelativeStyleforcard"
        android:radius="10dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_imagesave"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIT 210"
            android:textSize="30sp"
            style="@style/TextColor"
            android:id="@+id/item_titulesave"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/item_imagesave"
            android:layout_toRightOf="@+id/item_imagesave"
            android:layout_alignParentTop="true">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-11-28"
            style="@style/TextColor"
            android:textSize="20sp"
            android:id="@+id/textofecha"
            android:layout_toEndOf="@+id/item_imagesave"
            android:layout_toRightOf="@+id/item_imagesave"
            android:layout_below="@+id/item_titulesave">
        </TextView>

        <TextView
            android:id="@+id/text_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textofecha"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="75dp"
            android:layout_toEndOf="@+id/item_imagesave"
            android:layout_toRightOf="@+id/item_imagesave"
            android:text="15:00-16:00"
            style="@style/TextColor"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/textofecha"
            android:layout_toRightOf="@+id/textofecha"

            android:text="Cancelar"
            android:textAlignment="center"
            style="@style/BottonStyle"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_horariosguardados"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_cancelar"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/textofecha"
            android:layout_toRightOf="@+id/textofecha"

            android:text="Horarios"
            android:textAlignment="center"
            style="@style/BottonStyle"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>